{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                               
    "rootDir":"src/",
    "resolveJsonModule": true,                        
    "allowJs": true,    
    "lib":["ES6"],            
    "outDir": "build/",                                  
    "esModuleInterop": true,                  
    "strict": true,                                     
    "noImplicitAny": true,         
    "skipLibCheck": true                                 
  }
}
